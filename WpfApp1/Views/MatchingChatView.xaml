<UserControl x:Class="WpfApp1.Views.MatchingChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="{Binding StatusText}" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#333"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="20"/>

            <ProgressBar IsIndeterminate="True" 
                         Visibility="{Binding IsSearching, Converter={StaticResource BoolToVis}}"
                         Height="8" 
                         Width="300"
                         Margin="0,0,0,20"/>

            <Button Content="Bắt đầu tìm kiếm" 
                    Command="{Binding StartSearchCommand}"
                    Visibility="{Binding IsNotSearching, Converter={StaticResource BoolToVis}}"
                    Width="220" 
                    Height="50"
                    FontSize="18"
                    Background="#4CAF50" 
                    Foreground="White"/>

            <Button Content="Hủy tìm kiếm" 
                    Command="{Binding CancelSearchCommand}"
                    Visibility="{Binding IsSearching, Converter={StaticResource BoolToVis}}"
                    Width="220" 
                    Height="50"
                    FontSize="18"
                    Background="#F44336" 
                    Foreground="White"/>

        </StackPanel>
    </Grid>
</UserControl>