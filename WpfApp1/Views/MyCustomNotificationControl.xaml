<UserControl x:Class="WpfApp1.Views.MyCustomNotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="350">
    <!-- Sử dụng Border để tạo nền, bo góc và hiệu ứng đổ bóng -->
    <Border Background="#F7F9FC" 
            BorderBrush="#E0E6F0" 
            BorderThickness="1" 
            CornerRadius="8" 
            Width="350">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" Color="#000000" Opacity="0.1" BlurRadius="10" Direction="270"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cột 1: Icon thông báo -->
            <Path Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M11,17H13V11H11V17M11,9H13V7H11V9Z" 
                  Fill="#4A90E2" 
                  Stretch="Uniform" 
                  Width="24" 
                  Height="24" 
                  Margin="15,0,10,0"
                  VerticalAlignment="Center"/>

            <!-- Cột 2: Nội dung (Title và Message) -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,15,30,15">
                <TextBlock x:Name="TitleText" 
                           FontWeight="SemiBold" 
                           FontSize="14" 
                           Foreground="#333333"
                           Text="Người gửi"/>
                <TextBlock x:Name="MessageText" 
                           TextWrapping="Wrap" 
                           Foreground="#555555" 
                           Margin="0,4,0,0"
                           FontSize="13"
                           Text="Nội dung tin nhắn..."/>
            </StackPanel>

            <!-- Nút Đóng (X) ở góc trên bên phải -->
            <Button x:Name="CloseButton" 
                    Grid.Column="1"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,8,8,0"
                    Width="20" Height="20"
                    Style="{StaticResource CloseButtonStyle}"/>
        </Grid>
    </Border>

    <!-- Style cho nút đóng để có hiệu ứng đẹp hơn -->
    <UserControl.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <TextBlock Text="&#x2715;" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E6F0"/>
                    <Setter Property="Foreground" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
</UserControl>
