<Window x:Class="WpfApp1.CustomMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBoxWindow" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitle" Grid.Row="0" Text="Title" FontSize="16" FontWeight="Bold" Background="#DDDDDD" Padding="10"/>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="imgIcon" Grid.Column="0" Width="48" Height="48" Margin="0,0,20,0" VerticalAlignment="Center"/>

            <TextBlock x:Name="txtMessage" Grid.Column="1" Text="Message content" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="btnYes" Content="Yes" Width="80" Margin="5" Click="btnYes_Click"/>
            <Button x:Name="btnNo" Content="No" Width="80" Margin="5" Click="btnNo_Click"/>
            <Button x:Name="btnOK" Content="OK" Width="80" Margin="5" Click="btnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>