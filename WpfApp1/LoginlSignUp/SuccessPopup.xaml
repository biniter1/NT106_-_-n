<Window x:Class="WpfApp1.LoginlSignUp.SuccessPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Success" Height="200" Width="300"
        WindowStyle="None" Background="#F0F0F0"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">
    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Success Icon -->
            <TextBlock Grid.Row="0" Text="✓" FontSize="40" Foreground="#4CAF50"
                      HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Success Message -->
            <TextBlock Grid.Row="1" Text="Đăng nhập thành công!" 
                      FontSize="16" FontWeight="Bold" TextWrapping="Wrap"
                      HorizontalAlignment="Center" TextAlignment="Center"/>

            <!-- OK Button -->
            <Button Grid.Row="2" Content="OK" Width="100" Height="30" 
                   Margin="0,20,0,0" Click="OkButton_Click"
                   Background="#4CAF50" Foreground="White" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>