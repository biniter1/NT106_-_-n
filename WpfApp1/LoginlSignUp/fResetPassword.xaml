<Window x:Class="WpfApp1.LoginlSignUp.fResetPassword"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource RecoverPasswordTitle}" Height="460" Width="350"
        WindowStartupLocation="CenterScreen" 
        Background="White"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/StringResources.vi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="#DDDDDD">
        <Grid Margin="0,0,0,9">
            <!-- Nút đóng -->
            <Button x:Name="btnClose" 
                    Content="{DynamicResource CloseButton}" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Width="24" Height="24" 
                    Margin="0,10,10,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#AAAAAA"
                    FontSize="14"
                    Click="btnClose_Click"/>

            <!-- Form content -->
            <StackPanel Margin="30,40,30,30">
                <!-- Tiêu đề -->
                <TextBlock Text="{DynamicResource RecoverPasswordHeader}" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,15"/>

                <!-- Mô tả -->
                <TextBlock Text="{DynamicResource RecoverInstruction}" 
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,30"/>

                <!-- Email field -->
                <TextBlock Text="{DynamicResource LoginEmailLabel}" 
                           Foreground="#666666" 
                           Margin="0,0,0,8"/>

                <TextBox x:Name="txtEmail" 
                         Height="40" 
                         Padding="10,0" 
                         VerticalContentAlignment="Center"
                         FontSize="14"
                         Margin="0,0,0,5"
                         BorderBrush="#DDDDDD"/>

                <TextBlock x:Name="txtEmailError" 
                           Foreground="Red" 
                           FontSize="12"
                           Visibility="Collapsed"
                           Margin="0,0,0,10"/>

                <!-- Reset password button -->
                <Button x:Name="btnSubmit" 
                        Content="{DynamicResource SendResetLinkButton}" 
                        Height="44" 
                        Margin="0,25,0,0"
                        Background="#4F74FF" 
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="btnSubmit_Click"/>

                <!-- Success message -->
                <TextBlock x:Name="txtMessage" 
                           Foreground="#2E844A"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,20,0,0"
                           Visibility="Collapsed"/>

                <!-- Back to login link -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,25,0,0">
                    <TextBlock Text="{DynamicResource HasAccount}" 
                               Foreground="#666666"/>
                    <TextBlock>
                        <Hyperlink x:Name="linkLogin" 
                                   TextDecorations="None"
                                   Foreground="#4F74FF"
                                   Click="linkLogin_Click">
                            <Run Text="{DynamicResource LoginButton}"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>